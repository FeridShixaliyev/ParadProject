@using Parad.ViewModels
@model FavoritesVM
@{ ViewData["Title"] = "My Favorites"; }

<style>

    @@media only screen and (min-width: 1400px) {
        .masonry .item .details {
            left: 137px !important;
        }
    }

    @@media only screen and (min-width: 992px) and (max-width: 1200px) {
        .masonry .item .details {
            left: 137px !important;
        }
    }

    @@media only screen and (max-width: 992px) {
        .masonry .item .details {
            display: block
        }
    }

    @@media only screen and (min-width: 768px) and (max-width: 991px) {
        .masonry .item .details {
            left: 96px !important;
        }
    }

    @@media only screen and (min-width: 576px) and (max-width: 768px) {
        .masonry .item .details {
            left: 112px !important;
        }
    }

    @@media only screen and (min-width: 321px) and (max-width: 576px) {
        .masonry .item {
            position: relative;
            display: flex;
            justify-content: center;
        }

            .masonry .item .details {
                left: auto !important;
            }
    }

    @@media only screen and (min-width: 299px) and (max-width: 320px) {
        .masonry .item .details {
            left: 132px !important;
        }
    }
</style>
<section>
    <div class="profile-img-converter" style="display:none">
        <img id="pro-img-con" src="~/assets/images/@Model.User.ProfileImage" />
    </div>
</section>
<section id="favorite-content" style="margin-top:50px">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 litle-title">
                <div class="box-title darkmode-ignore">
                    <p>
                        PARAD
                    </p>
                </div>
            </div>
            <div class="col-lg-12 first-title">
                <h1>
                    My Favorite Photos
                </h1>
                <div class="line darkmode-ignore"></div>
            </div>
            @if (Model.Favorites.Where(f => f.UserId == Model.User.Id).ToList().Count > 0)
            {
<div class="masonry">
    @foreach (var item in Model.Favorites.Where(f => f.UserId == Model.User.Id))
    {
<div class="item">
    <img src="~/assets/images/@item.Image.ImageStr">
    <div class="user-img-icon">
        <img src="~/assets/images/@item.Image.User.ProfileImage" alt="">
        <p>
            @item.Image.User.UserName
        </p>
    </div>
    <a asp-controller="Image" asp-action="AddFavorites" asp-route-id="@item.Image.Id" class="add-to-collection">
        <i class="fa-solid fa-square-minus"></i>
        <span class="tooltiptext">exclude from favorites</span>
    </a>
    <a id="likeABtn" data-id="@item.Image.Id" class="like">
        <i class="fa-solid fa-heart">
        </i>
        <span class="tooltiptext">like</span>
    </a>
    <a href="./assets/images/@item.Image.ImageStr" download class="download">
        <i class="fa-solid fa-arrow-down"></i>
        <span class="tooltiptext">download</span>
    </a>
    <a asp-controller="Image" asp-action="Details" asp-route-id="@item.Image.Id" class="details" style="top: 10px;left: 119px;">
        <i class="fa-solid fa-info" style="font-size: 18px;"></i>
        <span class="tooltiptext">Details</span>
    </a>
</div>}
</div>
                <div class="popup-img darkmode-ignore">
                    <span>&times;</span>
                    <img src="./assets/images/photo.jpg" alt="">
                </div>}
            else
            {
                <div style="margin-top:35px;margin-bottom:100px">
                    <h2 style="display: flex; justify-content: center; font-weight: 900; color: gray; margin-bottom: 20px">
                        You don't have image which added to <bold style=" margin-left: 8px; color: rgb(4, 170, 109); isolation: isolate;"> Favorites</bold>
                    </h2>
                    <div style="display: flex; justify-content: center; font-size: 18px; color: gray; font-weight: 500; margin-bottom: 20px">
                        <p style="margin-right:8px">
                            If you want to add to Favorites , click <i class="fa-solid fa-plus"></i> button on any image .
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
