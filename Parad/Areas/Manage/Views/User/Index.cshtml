@model List<AppUser>
@{ ViewData["Title"] = "Category"; }


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Users</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> Profile Image </th>
                        <th> Username </th>
                        <th> First Name </th>
                        <th> Last Name </th>
                        <th> Email </th>
                        <th> Is LockOut? </th>
                        <th> Start Date Time </th>
                        <th> Role </th>
                        <th> Delete </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/assets/images/@item.ProfileImage" alt="image" style="width:50px;height:50px;border-radius:50%" />
                            </td>
                            <td> @item.UserName </td>
                            <td> @item.FirstName </td>
                            <td> @item.LastName </td>
                            <td> @item.Email </td>
                            <td>
                                <a>@item.LockoutEnabled</a>
                            </td>
                            <td>
                                @item.StartDate
                            </td>
                            <td>
                                <div style="position: relative; width: 44px; height: 24px; border: 2px solid #44ce42; border-radius: 4px; ">
                                    <a asp-controller="User" asp-action="Role" asp-route-id="@item.Id" style="position: absolute; width: 100%; height: 100%; cursor: pointer; text-align: center; padding-top: 3px;text-decoration:none ">
                                        Role
                                    </a>
                                </div>
                            </td>
                            <td>
                                @if (item.UserName == "fero_123")
                                {
                                     <i class="fa-solid fa-user-xmark"></i> 
                                }
                                else
                                {
                                    <a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="fa-solid fa-trash" style="color: red; font-size: 18px;"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

